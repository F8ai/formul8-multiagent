{
  "version": 2,
  "builds": [
    {
      "src": "api/auth.js",
      "use": "@vercel/node"
    },
    {
      "src": "lambda-package/lambda.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/lambda-package/lambda.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/auth.js"
    },
    {
      "src": "/chat",
      "dest": "/api/auth.js?page=chat"
    },
    {
      "src": "/(.*)",
      "dest": "/api/auth.js?page=$1"
    }
  ],
  "env": {
    "AUTH_USERNAME": "@auth-username",
    "AUTH_PASSWORD": "@auth-password"
  }
}

