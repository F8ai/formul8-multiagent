# ===========================================
# Formul8 Multiagent Environment Configuration
# ===========================================
#
# IMPORTANT: This is an example file. Copy it to .env and fill in your actual values.
# DO NOT commit .env to version control!
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual credentials
#

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from your Supabase project settings > API
# URL format: https://your-project-id.supabase.co

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server port
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# API Key requirement (true/false)
REQUIRE_API_KEY=false

# Valid API keys (comma-separated)
# Example: key1,key2,key3
VALID_API_KEYS=

# Rate limiting
RATE_LIMIT_MAX=50
RATE_LIMIT_WINDOW=900000

# Security log level (debug, info, warn, error)
SECURITY_LOG_LEVEL=info

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed origins (comma-separated)
# Example: http://localhost:3000,http://localhost:5173,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://f8.syzygyx.com

# ===========================================
# AI/LLM CONFIGURATION (Optional)
# ===========================================

# OpenRouter API Key (for AI features)
OPENROUTER_API_KEY=

# Default AI model
DEFAULT_AI_MODEL=openai/gpt-3.5-turbo

# ===========================================
# DATABASE CONFIGURATION (Optional)
# ===========================================

# PostgreSQL connection (if using direct connection)
DATABASE_URL=

# Redis configuration (for distributed rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# LOGGING & MONITORING (Optional)
# ===========================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable verbose logging
VERBOSE_LOGGING=false

# Sentry DSN (for error tracking)
SENTRY_DSN=

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================

# Enable beta features
ENABLE_BETA_FEATURES=false

# Enable analytics
ENABLE_ANALYTICS=false

# Enable debug mode
DEBUG_MODE=false

# ===========================================
# TESTING CONFIGURATION (Optional)
# ===========================================

# Test database URL
TEST_DATABASE_URL=

# Test Supabase URL
TEST_SUPABASE_URL=

# Test Supabase key
TEST_SUPABASE_KEY=

# ===========================================
# NOTES
# ===========================================
#
# Security Best Practices:
# 1. Never commit .env to version control
# 2. Use different credentials for development and production
# 3. Rotate keys regularly
# 4. Use strong, unique passwords
# 5. Enable HTTPS in production
# 6. Review and limit API key permissions
#
# Supabase Keys:
# - ANON_KEY: Safe to use in client-side code, respects RLS
# - SERVICE_ROLE_KEY: NEVER expose to client, bypasses RLS
#
# For more information:
# - See f8-security/SUPABASE-USER-AUTH-GUIDE.md
# - See examples/SUPABASE-EXAMPLES-README.md
#
